{
  "name": "vue-calculator",
  "version": "1.0.0",
  "description": "A simple Vue calculator desktop app",
  "main": "main.js",
  "scripts": {
    "start": "electron main.js",
    "dist": "electron-builder",
    "build": "cross-env NODE_ENV=production electron-builder"
  },
  "build": {
    "appId": "com.yourcompany.vuecalculator",
    "productName": "Vue Calculator",
    "compression": "maximum",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "calculator.html",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "KevinNdirangu",
        "repo": "calculator",
        "releaseType": "release"
      }
    ]
  },
  "dependencies": {
    "electron-updater": "^6.3.9",
    "electron-log": "^4.4.7"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^25.1.8",
    "cross-env": "^7.0.3"
  }
}
